<div class="row">
  <form class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title grey-text text-darken-4">Create new project</span>

        <div class="row">
          <div class="input-field col s12">
            {{input name='name' value=model.name}}
            <label for="name">Project name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            {{textarea class="materialize-textarea" name='description' value=model.description}}
            <label for="description">Description</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input type='date' class='datepicker' name='deadline' value="{{model.expires_at}}" />
            <label for="deadline">Deadline</label>
          </div>
        </div>

        <div class='row'>
          <div class='col s12'>
            <div class="switch">
              <label>
                {{input type="checkbox" name="allow_anonymous" checked=model.allow_anonymous}}
                <span class="lever"></span>
                Allow anonymous posts and comments
              </label>
            </div>
          </div>
        </div>

      </div>
      <div class="card-action">
        <button class='waves-effect waves-light btn text-white blue lighten-1'>Save</button>
        <button class='waves-effect waves-light btn text-white'>Close</button>
      </div>
    </div>
  </form>
</div>
