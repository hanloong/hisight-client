<div class='breadcrumbs grey-text'>
  {{#link-to 'dashboard.index'}}
  <i class='mdi-action-home'></i>
  Home
  {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{#link-to 'projects'}} Projects {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{model.name}}
</div>

<div class="row">
  {{#each model.ideas as |idea|}}
  <div class="col s12 l6">
    <div class="card">
      <div class="card-content">
        <span class="card-title grey-text text-darken-4">{{idea.name}}</span>
        <p>{{idea.description}}</p>
      </div>
      <div class="card-action">
        {{#link-to 'projects.ideas.show' idea.project idea}}Show{{/link-to}}
      </div>
    </div>
  </div>
  {{/each}}
</div>

<div class='action-float center'>
  <ul>
    <li class='tooltipped' data-position="left" data-tooltip='Edit {{model.project.name}}'>
    {{#link-to 'projects.edit' model.project class='btn-floating btn waves-effect waves-light pink'}}
      {{fa-icon 'edit'}}
    {{/link-to}}
    </li>
    <li class='tooltipped' data-position="left" data-tooltip='Create new project'>
    {{#link-to 'projects.new' class='btn-floating btn waves-effect waves-light amber'}}
      {{fa-icon 'tasks'}}
    {{/link-to}}
    </li>
    <li class='tooltipped' data-position="left" data-tooltip='Submit a new idea'>
    {{#link-to 'projects.ideas.new' model.project class='btn-floating btn waves-effect waves-light green'}}
      {{fa-icon 'lightbulb-o'}}
    {{/link-to}}
    </li>
  </ul>
  <a class="btn-floating btn-large waves-effect waves-light light-blue"><i class="mdi-content-add"></i></a>
</div>
