<div class="row">
  {{#each model.ideas as |idea|}}
  <div class="col s12 l6">
    <div class="card">
      <div class="card-content">
        <span class="card-title grey-text text-darken-4">{{idea.name}}</span>
        <p>{{idea.description}}</p>
      </div>
      <div class="card-action">
        {{#link-to 'projects.ideas.show' idea.project idea}}Show{{/link-to}}
      </div>
    </div>
  </div>
  {{/each}}
  <div class='action-float'>
    <a title='Submit new idea' class="btn-floating btn-large waves-effect waves-light red"><i class="mdi-content-add"></i></a>
  </div>
</div>
