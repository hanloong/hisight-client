<div class='breadcrumbs grey-text'>
  {{#link-to 'dashboard.index'}}
  <i class='mdi-action-home'></i>
  Home
  {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{#link-to 'projects'}} Projects {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{model.name}}
</div>

<div class="row">
  <div class='col s12'>

    <div class='row'>
      <nav class='search-nav'>
        <div class='nav-wrapper'>
          <form>
            <div class="input-field">
              <input id="search" type="search" placeholder='What are you looking for?'>
              <label for="search"><i class="mdi-action-search"></i></label>
            </div>
          </form>
        </div>
      </nav>
    </div>
    <div class="col s12">
      <div class='card'>
        <ul class="tabs">
          <li class="tab col l2 s4"><a>Discussing</a></li>
          <li class="tab col l2 s4"><a >Accepted</a></li>
          <li class="tab col l2 s4"><a >In Progress</a></li>
          <li class="tab col l2 s4"><a >Completed</a></li>
          <li class="tab col l2 s4"><a >Rejected</a></li>
          <li class="tab col l2 s4"><a >Archived</a></li>
        </ul>
      </div>
    </div>


    {{#each model.ideas as |idea|}}
      <div class="col s12">
        <div class="card">
          <div class='col m2 s12 center-align no-padding'>
            <div class='success-text score'>
              <small>Accepted</small>
              <h4>99.5</h4>
              <small>12 votes</small>
            </div>
          </div>
          <div class='col m8 s12'>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4">{{idea.name}}</span>
              <p>{{idea.description}}</p>
            </div>
          </div>
          <div class='col m2 s12 center-align'>
            <div class="card-content">
              {{#link-to 'idea.show' idea class="btn-floating btn-large info"}}
                <i class="mdi-navigation-check"></i>
              {{/link-to}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>
