<div class='breadcrumbs grey-text'>
  {{#link-to 'app.dashboard'}}
  <i class='mdi-action-home'></i>
  Home
  {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{#link-to 'projects'}} Projects {{/link-to}}
  <i class='mdi-navigation-chevron-right'></i>
  {{model.project.name}}
</div>

<div class="row">
  <div class='col s12'>

    <div class='row'>
      <nav class='search-nav'>
        <div class='nav-wrapper'>
          <form>
            <div class="input-field">
              <input id="search" type="search" placeholder='What are you looking for?'>
              <label for="search"><i class="mdi-action-search"></i></label>
            </div>
          </form>
        </div>
      </nav>
    </div>

    <div class="col s12">
      <div class='card'>
        <ul class="tabs">
          <li class="tab col l2 s4"><a>Discussing</a></li>
          <li class="tab col l2 s4"><a >Accepted</a></li>
          <li class="tab col l2 s4"><a >In Progress</a></li>
          <li class="tab col l2 s4"><a >Completed</a></li>
          <li class="tab col l2 s4"><a >Rejected</a></li>
          <li class="tab col l2 s4"><a >Archived</a></li>
        </ul>
      </div>
    </div>

    <div class="col m12 l9">
    {{#each model.project.ideas as |idea|}}
        <div class="card idea">

          <div class='col m2 s12 center-align no-padding'>
            <div class='success-text score'>
              <h4>99.5</h4>
              <small class='status'>Accepted</small>
            </div>
          </div>

          <div class='col m10 s12'>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4">
                {{#link-to 'idea.show' idea class='name'}}
                  {{idea.name}}
                  <i class="fa fa-chevron-right right"></i>
                {{/link-to}}
              </span>
              <div class='description'>
                {{text-blob value=idea.description}}
              </div>
            </div>
            <div class='card-action'>
              12 votes
              33 comments
              Submitted by blah on blah
            </div>
          </div>

        </div>
    {{/each}}
    </div>
    <div class='col m12 l3'>
      <div class='card card-graph'>
        <div class='dashboard-chart'>
          <div class='chart-wrapper'>
            {{ember-chart type='doughnut' options=model.chart.options data=model.chart.chartData}}
            <div class='chart-doughnut-inside'>
              499
            </div>
          </div>
          <span class='chart-title'>Ideas by project</span>
        </div>
      </div>
    </div>

  </div>
</div>
