<form class="col s12" {{action 'save' on='submit'}}>
  <div class="card">
    <div class="card-content">
      <span class="card-title grey-text text-darken-4">{{title}}</span>

      <div class="row">
        <div class="input-field col s12">
          {{input id='name' name='name' value=model.name}}
          <label {{bind-attr class="isNew::active"}} for="name">Project name</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          {{textarea id='description' class="materialize-textarea" name='description' value=model.description}}
          <label {{bind-attr class="isNew::active"}} for="description">Description</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input type="date" name='expires_at' id='deadline' class='datepicker' value="{{moment model.expires_at 'YYYY/MM/DD'}}" />
          <label {{bind-attr class="isNew::active"}} for="deadline">Deadline</label>
        </div>
      </div>

      <div class='row'>
        <div class='col s12'>
          <div class="switch">
            <label>
              {{input type="checkbox" checked=model.allow_anonymous}}
              <span class="lever"></span>
              Allow anonymous posts and comments
            </label>
          </div>
        </div>
      </div>

    </div>
    <div class="card-action">
      <button type='submit' class='waves-effect waves-light btn text-white pink lighten-2'>Save</button>
      <button {{action 'cancel'}} class='waves-effect waves-light btn text-white'>Close</button>
    </div>
  </div>
</form>
{{yield}}
