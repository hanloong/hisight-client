<form class="col s12 m8 offset-m2" {{action 'save' on='submit'}}>
  <div class="card">
    <div class="card-content">
      <span class="card-title grey-text text-darken-4">
        {{title}}
      </span>

      <div class="row">
        <div class="input-field col s12">
          {{input id='name' name='name' value=model.name}}
          <label {{bind-attr class="isNew::active"}} for="name">Idea title</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          {{textarea id='description' class="materialize-textarea" name='description' value=model.description}}
          <label {{bind-attr class="isNew::active"}} for="description">Description</label>
        </div>
      </div>
    </div>

    <div class="card-action">
      <button type='submit' class='col s12 l2 waves-effect waves-light btn text-white pink lighten-2'>Save</button>
      <button {{action 'cancel'}} class='col s12 l2 waves-effect waves-light btn text-white'>Close</button>
    </div>
  </div>
</form>
